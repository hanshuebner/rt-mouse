{
  "name": "rt-mouse",
  "version": "1.0.0",
  "description": "IBM RT PC Mouse Emulator",
  "main": "server.js",
  "scripts": {
    "start": "echo 'Error: Serial port path is required' && echo 'Usage: npm start -- <serial-port-path>' && echo 'Example: npm start -- /dev/tty.usbserial-1234' && exit 1",
    "start:dev": "node server.js",
    "dev": "nodemon --watch server.js --watch public/ --ext js,html,css --exec 'node server.js'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "serialport": "^12.0.0",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  }
} 